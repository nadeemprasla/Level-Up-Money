<form>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Name</label>
        <div class="col-sm-10">
            <input type="text" class="form-control" id="entryName" placeholder="Input Name">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Category</label>
        <div class="col-sm-5">
           <select class="form-control form-control-sm" id="choice1">
                <option value="1">Credit</option>
                <option value="2">Debit</option>
            </select>
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Amount</label>
        <div class="col-sm-10">
            <input type="number" class="form-control" id="amount" placeholder="Dollar Amount">
        </div>
    </div>
    <div class="form-group row">
        <label class="col-sm-2 col-form-label">Memo</label>
        <div class="col-sm-10">
            <textarea rows="6" cols="50" class="form-control" id="memo" placeholder="Memo Here"></textarea>
        </div>
    </div>

    


    <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary" id="submit">Save changes</button>
    </div>
</form>