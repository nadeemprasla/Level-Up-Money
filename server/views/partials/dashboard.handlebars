<div class="container-fluid" style="color:rgb(66, 66, 65);">
    <div class="row">
        <div class="col-sm-3 col-xl-2 bd-sidebar">
            <div class="d-flex align-items-center mt-5">
                <ul style="list-style-type: none;">
                    <li style="margin:20px"><a href="#" id="addCat">Add Catagory</a></li>
                    <li style="margin:20px"><a href="#">Financial Tips</a></li>
                    <li style="margin:20px"><a href="#">Blogs</a></li>
                    <li style="margin:20px"><a href="#">Expence chart</a></li>
                </ul>
            </div>

        </div>
        <div class="col-md-8" id="main" style="border-left: 1px solid lightgray;">
            <div class="row">
                <form class="mt-2 ml-3">
                    <div class="input-group m-3">
                        <select class="form-control form-control-sm" id="monthChoice" value="">
                            <option value="1">January</option>
                            <option value="2">February</option>
                            <option value="3">March</option>
                            <option value="4">April</option>
                            <option value="5">May</option>
                            <option value="6">June</option>
                            <option value="7">July</option>
                            <option value="8">August</option>
                            <option value="9">September</option>
                            <option value="10">October</option>
                            <option value="11">November</option>
                            <option value="12">December</option>
                        </select>
                        <h5 class="ml-3 mt-2">Budget/Salary($) * </h5>
                        <input class="form-control ml-sm-2" type="number" placeholder="Budget" id="budget"
                            data-bind="value:budget"
                            value="{{allowance.total_budget}}">
                        <h5 class="ml-3 mt-2">Other income($)</h5>
                        <input class="form-control ml-sm-2" type="number" placeholder="Other income" id="othrIncome"
                            data-bind="value:othrIncome" value="{{allowance.extra_income}}">
                    </div>

                </form>
            </div>


            {{#each category}}
            <div class="accordion" id="cardParent">

                <div class="card">
                    <div class="card-header" id={{this.id}}>
                        <h2 class="mb-0 input-group">
                            <button class="btn btn-link col-sm-3" type="button" data-toggle="collapse" data-target="#"
                                +{{catagory.name}} aria-expanded="true" aria-controls="cardOne">{{this.category_name}}
                            </button>
                            <div class="input-group">
                                <h6 class="mt-2">Planned Amount($) *</h6>
                                <input class="form-control ml-2 col-sm-3" type="number" placeholder="amount"
                                    id="plannedAmt">
                                <button class="btn btn-link ml-md-auto" type="submit" id="addItem" data-catid="{{this.id}}"><i
                                        class="fa fa-plus"></i>Add Item</button>
                            </div>
                        </h2>
                    </div>

                    <div class="collapse show" id={{category.name}} aria-labelledby={{this.id}}
                        data-parent="#cardParent">
                        <div class="card-body">
                            <div class="row">
                                <div class="col-sm-2">Item</div>
                                <div class="col-sm-5">Memo</div>
                                <div class="col-sm-2">AmtType</div>
                                <div class="col-sm-2">Amountspent</div>
                                <hr>
                            </div>
                            {{{formatName ../alldata this ../user}}}

                        </div>

                    </div>
                </div>
            </div>
            {{/each}}



            {{!-- Modal --}}
            <div class="modal fade" id="categoryModel" tabindex="-1" role="dialog" aria-labelledby="categoryModelLabel"
                aria-hidden="true">
                <div class="modal-dialog" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="ecategoryModelLabel">New category</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            {{> createCategory this }}
                        </div>

                    </div>
                </div>
            </div>
        </div>

        {{!-- Modal --}}
        <div class="modal fade" id="enteriesModal" tabindex="-1" role="dialog" aria-labelledby="enteriesModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="enteriesModalLabel">New Entry</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        {{> entries category}}
                    </div>
                    {{!-- <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-primary">Save changes</button>
                </div> --}}
                </div>
            </div>
        </div>
    </div>